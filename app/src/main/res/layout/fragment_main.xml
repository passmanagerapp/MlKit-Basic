<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainFragment">

    <Button
        android:id="@+id/btn_barcode_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_text_recognizer"
        android:layout_marginBottom="15dp"
        android:text="@string/barcode_scanner" />

    <Button
        android:id="@+id/btn_text_recognizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text_recognizer" />

    <Button
        android:id="@+id/btn_facial_detector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_text_recognizer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/face_contour_detector" />


</RelativeLayout>